<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoACtionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="windowNoTitle">true</item>
        //gender color
    </style>

    <style name="EditextLogin" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/backgroudbutton</item>
    </style>
    <style name="LoginFB">
        <item name="android:background">@drawable/button_selector</item>
    </style>
    <style name="TextViewUnderLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="HomeActivityTheme" parent="NoACtionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_home_activity</item>
    </style>
    <style name="EditTextTime">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="EditTextTimeTow" parent="EditTextTime">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="NewsFeedTansTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
