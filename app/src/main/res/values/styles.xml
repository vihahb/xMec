<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoACtionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="windowNoTitle">true</item>
        //gender color
    </style>

    <style name="EditextLogin" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/backgroudbutton</item>
    </style>

    <style name="LoginFB">
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="TextViewUnderLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="HomeActivityTheme" parent="NoACtionBar">
        <item name="android:windowBackground">@drawable/bg_home_activity</item>
    </style>
    <style name="MaterialTab" parent="HomeActivityTheme">

        <item name="colorAccent">@color/icons</item>

    </style>
    <style name="EditTextTime">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="EditTextTimeTow" parent="EditTextTime">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditextNomarl">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/bg_edittext_search</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="EditextNomarl.Base">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextviewBlod">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonRadius">
        <item name="android:background">@drawable/bg_button_radius</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:layout_width">wrap_content</item>-->
    </style>
    <style name="LinearLayoutButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/bg_shape_radius_white</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="ButtonImage">
        <item name="android:layout_width">@dimen/button_image_size</item>
        <item name="android:layout_height">@dimen/button_image_size</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="RadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/out_line</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:background">@drawable/toggle_widget_background</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>"
</resources>
