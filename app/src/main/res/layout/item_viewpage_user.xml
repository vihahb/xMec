<?xml version="1.0" encoding="utf-8"?>
<com.xtelsolution.xmec.xmec.views.widget.CarouselLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="190dp"
    android:background="@drawable/shadow"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_18"
    android:paddingLeft="@dimen/dimen_8"
    android:paddingRight="@dimen/dimen_8"
    android:paddingTop="@dimen/dimen_8">

    <ImageView
        android:id="@+id/img_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="@dimen/dimen_8"
        android:src="@drawable/ic_man"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/img_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/avatar"
                app:av_border_color="@color/colorPrimary"
                app:av_border_width="2dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:text="Họ tên:"
                            android:textColor="@color/primaryText"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_profile_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:text="..."
                            android:textColor="@color/primaryText"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:text="Ngày sinh:"
                            android:textColor="@color/textHint"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_8"
                            android:text="..."
                            android:textColor="@color/textHint"
                            android:textSize="11sp" />
                    </LinearLayout>


                </LinearLayout>


                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/icons"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="@dimen/dimen_32"
                        android:layout_height="@dimen/dimen_32"
                        android:layout_gravity="center_horizontal|center_vertical" />
                </android.support.design.widget.CoordinatorLayout>
            </FrameLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_22"
                        android:layout_height="@dimen/dimen_22"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_height" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginLeft="@dimen/dimen_6"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:text="Chiều cao: " />

                    <TextView
                        android:id="@+id/tv_profile_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:text="..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="@dimen/dimen_25"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_weight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:text="Cân nặng:" />

                    <TextView
                        android:id="@+id/tv_profile_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:text="..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="@dimen/dimen_25"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:text="BMI:" />

                    <TextView
                        android:id="@+id/tv_profile_ibm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_8" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_18"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:text="@string/update_profile_text"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

</com.xtelsolution.xmec.xmec.views.widget.CarouselLinearLayout>