<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_4">

    <ImageView
        android:id="@+id/img_friend_avatar"
        android:layout_width="@dimen/dimen_64"
        android:layout_height="@dimen/dimen_64"
        android:layout_gravity="bottom"
        android:src="@mipmap/ic_nguyen_nhan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingTop="@dimen/text_size_8">

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="Nguyễn Thiên Ân"
            android:textColor="@color/black_75"
            android:textSize="@dimen/font_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_6">

            <Button
                android:id="@+id/btn_friend_accept"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_36"
                android:layout_marginBottom="@dimen/dimen_4"
                android:layout_marginRight="@dimen/text_size_8"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_weight="1"
                android:background="@drawable/button_acceft_friend"
                android:text="Đồng ý"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_friend_decline"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_36"
                android:layout_marginBottom="@dimen/dimen_4"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_weight="1"
                android:background="@drawable/button_decline_friend"
                android:text="Từ chối" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>