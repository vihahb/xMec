<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabsNewsFeed"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:tabGravity="center"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorColor="@color/icons"
        app:tabSelectedTextColor="@color/icons"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/NewsFeedTansTextAppearance"
        app:tabTextColor="@color/icons" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpNewsFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>