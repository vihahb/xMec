<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xtelsolution.xmec">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".xmec.views.activity.SplashScreen"
            android:theme="@style/NoACtionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".xmec.views.activity.MainActivity" />
        <activity android:name=".xmec.views.activity.LoginActivity" />
        <activity
            android:name=".xmec.views.activity.RegisterActivity"
            android:parentActivityName=".xmec.views.activity.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".xmec.views.activity.ConfirmOPTActivity"
            android:parentActivityName=".xmec.views.activity.RegisterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".xmec.views.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeActivityTheme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".xmec.views.activity.DetailHospitalActivity"
            android:parentActivityName=".xmec.views.activity.HomeActivity"
            android:theme="@style/HomeActivityTheme" />
        <activity
            android:name=".xmec.views.activity.MedicalDirectoryActivity"
            android:parentActivityName=".xmec.views.activity.HomeActivity"
            android:theme="@style/HomeActivityTheme" />
        <activity
            android:name=".xmec.views.activity.DetailDiseaseActivity"
            android:theme="@style/MaterialTab" />
        <activity
            android:name=".xmec.views.activity.DiseaseDiagnosiActivity"
            android:theme="@style/HomeActivityTheme" />
        <activity android:name=".xmec.views.activity.DetailControlDiseaseActivity" />
        <activity android:name=".xmec.views.activity.DetailBodyPart" />
        <activity android:name=".xmec.views.activity.UpdateInfoActivity"
            android:theme="@style/HomeActivityTheme"></activity>
    </application>

</manifest>